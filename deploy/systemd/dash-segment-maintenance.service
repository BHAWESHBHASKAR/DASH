[Unit]
Description=DASH Segment Maintenance Daemon
After=network.target

[Service]
Type=simple
User=dash
Group=dash
WorkingDirectory=/opt/dash
EnvironmentFile=/etc/dash/segment-maintenance.env
ExecStart=/opt/dash/bin/segment-maintenance-daemon
Restart=on-failure
RestartSec=2
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/dash

[Install]
WantedBy=multi-user.target
