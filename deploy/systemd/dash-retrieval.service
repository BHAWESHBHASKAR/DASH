[Unit]
Description=DASH Retrieval Service
After=network.target

[Service]
Type=simple
User=dash
Group=dash
WorkingDirectory=/opt/dash
EnvironmentFile=/etc/dash/retrieval.env
ExecStart=/opt/dash/bin/retrieval --serve
Restart=on-failure
RestartSec=2
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/dash

[Install]
WantedBy=multi-user.target
